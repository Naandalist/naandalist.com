---
type Props = {
  href: string;
};

const { href } = Astro.props;
---

<a
  href={href}
  class='relative group w-fit flex pl-7 pr-3 py-1.5 flex-nowrap rounded border border-white/20 hover:bg-white/5 hover:text-white transition-colors duration-300 ease-in-out'
>
  <img
    src='/icons/arrow-left.svg'
    alt='Back arrow'
    class='absolute top-1/2 left-2 -translate-y-1/2 size-4 group-hover:-translate-x-1 transition-transform duration-300 ease-in-out'
  />
  <div class='text-sm'>
    <slot />
  </div>
</a>
