---
import { type CollectionEntry } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import JsonLd from "@components/JsonLd.astro";
import { readingTime } from "@lib/utils";
import { createBlogPostingSchema } from "@lib/jsonld";
import BackToPrev from "@components/BackToPrev.astro";
import { useTranslations } from "@i18n/utils";

interface Props {
  post: CollectionEntry<"posts">;
  lang?: "en" | "id";
}

const { post, lang = "en" } = Astro.props;
const t = useTranslations(lang);
const { Content } = await post.render();

const jsonLd = createBlogPostingSchema(post);
const backLink = lang === "id" ? "/id/posts" : "/posts";
---

<PageLayout
  title={post.data.title}
  description={post.data.description || post.data.subtitle}
>
  <JsonLd schema={jsonLd} />
  <Container>
    <div class='animate'>
      <BackToPrev href={backLink}> {t("posts.back")} </BackToPrev>
    </div>
    <div class='space-y-1 my-10'>
      <div class='animate flex items-center gap-1.5'>
        <div class='font-base text-sm'>
          <FormattedDate date={post.data.date} />
        </div>
        &bull;
        <div class='font-base text-sm'>
          {readingTime(post.body)}
        </div>
      </div>
      <h1 class='animate text-2xl font-semibold text-white'>
        {post.data.title}
      </h1>
    </div>
    <article class='animate'>
      <Content />
    </article>
  </Container>
</PageLayout>
