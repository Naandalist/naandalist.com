---
import { SITE, SOCIALS } from "@constants";
---

<ul class='flex flex-wrap gap-3'>
  {
    SOCIALS.map((SOCIAL) => (
      <li class='flex gap-x-2 text-nowrap items-center'>
        <a
          href={SOCIAL.HREF}
          target='_blank'
          rel='noopener noreferrer'
          class='inline-flex items-center gap-2 px-3 py-1.5 rounded-md bg-white/5 text-current hover:bg-white/10 hover:text-white no-underline transition-colors duration-300 ease-in-out'
          aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}
        >
          <img src={SOCIAL.ICON} alt='' class='w-4 h-4' />
          {SOCIAL.NAME}
        </a>
      </li>
    ))
  }
</ul>
