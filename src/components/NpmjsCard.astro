---
import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"npmjs">;
  lang?: "en" | "id";
};

const { entry, lang = "en" } = Astro.props;
const baseUrl = lang === "id" ? "/id" : "";
const cleanSlug = entry.slug.replace(/\/indexid$/, "");
const packageUrl = `${baseUrl}/npmjs/${cleanSlug}`;

const defaultThumbnail =
  "https://res.cloudinary.com/naandalistcloud/image/upload/v1767252550/naandalist.com/ETPwXGaXsAA2qTD_tup0cm.png";
---

<div
  class='group relative flex flex-col sm:flex-row gap-4 p-4 rounded-lg border border-white/20 transition-all duration-300 hover:bg-white/5 hover:border-white/30'
>
  <!-- Package Image/Preview -->
  <a
    href={packageUrl}
    class='relative w-full sm:w-48 h-32 shrink-0 overflow-hidden rounded-md bg-gradient-to-r from-cyan-500 to-blue-500'
  >
    <img
      src={defaultThumbnail}
      alt={`${entry.data.title} preview`}
      class='h-full w-full object-cover transition-transform duration-300 group-hover:scale-105'
    />
  </a>

  <!-- Content -->
  <div class='flex flex-1 flex-col gap-2'>
    <!-- Title and Description -->
    <a href={packageUrl} class='block'>
      <h3
        class='font-semibold text-lg text-white group-hover:underline decoration-2 underline-offset-2'
      >
        {entry.data.title}
      </h3>
      <p class='text-sm text-white/70 mt-1 line-clamp-2'>
        {entry.data.description}
      </p>
    </a>

    <!-- Version, License and External Link -->
    <div class='flex items-end justify-between gap-2 mt-auto'>
      <!-- Version and License -->
      <div class='flex flex-wrap items-center gap-1.5'>
        {
          entry.data.version && (
            <span class='text-xs px-2 py-0.5 rounded-md bg-white/10 text-white/70'>
              v{entry.data.version}
            </span>
          )
        }
        {
          entry.data.license && (
            <span class='text-xs px-2 py-0.5 rounded-md bg-white/10 text-white/70'>
              {entry.data.license}
            </span>
          )
        }
      </div>

      <!-- External Link Button -->
      {
        (entry.data.npmURL || entry.data.repoURL) && (
          <a
            href={entry.data.npmURL || entry.data.repoURL}
            target='_blank'
            rel='noopener noreferrer'
            class='shrink-0 p-2 rounded-md hover:opacity-70 transition-opacity duration-200 ml-auto translate-y-0.5'
            aria-label='Open package link'
          >
            <img
              src='/icons/top-right.svg'
              alt='External link'
              class='w-4 h-4'
            />
          </a>
        )
      }
    </div>
  </div>
</div>
