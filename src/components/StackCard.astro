---
type Props = {
  text: string;
  icon: string;
  href: string;
};

const { text, icon, href } = Astro.props;
---

<a
  href={href}
  target='_blank'
  class='w-fit px-3 py-2 group rounded border flex gap-2 items-center border-neutral-700 hover:bg-neutral-800 blend'
>
  <img
    src={`https://skillicons.dev/icons?i=${icon}`}
    alt={icon}
    height='20'
    width='20'
  />
  <span
    class='text-sm capitalize text-neutral-400 group-hover:text-white blend'
  >
    {text}
  </span>
</a>
